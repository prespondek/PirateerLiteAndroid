<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:theme="@style/AppTheme">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center" android:padding="0dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
    >
        <ImageView
                android:layout_width="8dp"
                android:layout_height="wrap_content" app:srcCompat="@drawable/rank_small_1" android:id="@+id/xpIcon"
                android:layout_weight="1"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/xpText" android:layout_weight="3"
                android:background="@drawable/tool_tip_bg"
                android:text="0"
                android:layout_gravity="center" android:layout_margin="4dp"
                android:paddingLeft="4dp" android:paddingRight="4dp" android:paddingStart="4dp"
                android:paddingEnd="4dp" android:textAlignment="gravity"/>
        <ImageView
                android:layout_width="8dp"
                android:layout_height="match_parent" app:srcCompat="@drawable/gold_piece" android:id="@+id/goldIcon"
                android:layout_weight="1"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/goldText" android:layout_weight="3"
                android:background="@drawable/tool_tip_bg"
                android:layout_margin="4dp" android:textAlignment="gravity" android:text="0"
                android:layout_gravity="center" android:paddingLeft="4dp" android:paddingStart="4dp"
                android:paddingEnd="4dp" android:paddingRight="4dp"/>
        <ImageView
                android:layout_width="8dp"
                android:layout_height="match_parent" app:srcCompat="@drawable/silver_piece" android:id="@+id/silverIcon"
                android:layout_weight="1"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/silverText" android:layout_weight="3"
                android:background="@drawable/tool_tip_bg"
                android:layout_margin="4dp" android:textAlignment="gravity" android:text="0"
                android:paddingLeft="4dp" android:paddingRight="4dp"
                android:paddingStart="4dp" android:paddingEnd="4dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>