<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:theme="@style/AppTheme">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:gravity="center" android:padding="0dp">
        <ImageView
                android:layout_width="8dp"
                android:layout_height="wrap_content" app:srcCompat="@drawable/rank_small_1" android:id="@+id/xpIcon"
                android:layout_weight="1"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/xpText" android:layout_weight="3"
                android:gravity="right|center_vertical" android:background="@drawable/tool_tip_bg"
                android:padding="4dp" android:layout_margin="4dp" android:textAlignment="gravity" android:text="0"
                android:layout_gravity="center"/>
        <ImageView
                android:layout_width="8dp"
                android:layout_height="match_parent" app:srcCompat="@drawable/gold_piece" android:id="@+id/goldIcon"
                android:layout_weight="1"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/goldText" android:layout_weight="3"
                android:gravity="right|center_vertical" android:background="@drawable/tool_tip_bg"
                android:padding="4dp" android:layout_margin="4dp" android:textAlignment="gravity" android:text="0"
                android:layout_gravity="center"/>
        <ImageView
                android:layout_width="8dp"
                android:layout_height="match_parent" app:srcCompat="@drawable/silver_piece" android:id="@+id/silverIcon"
                android:layout_weight="1"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/silverText" android:layout_weight="3"
                android:gravity="right|center_vertical" android:background="@drawable/tool_tip_bg"
                android:padding="4dp" android:layout_margin="4dp" android:textAlignment="gravity" android:text="0"
                android:layout_gravity="center"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>