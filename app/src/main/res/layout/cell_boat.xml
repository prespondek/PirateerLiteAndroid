<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent" app:srcCompat="@drawable/gold_piece"
                android:id="@+id/boatImg"
                android:layout_weight="0.2"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:layout_weight="0.8">
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" android:id="@+id/boatName" android:layout_weight="0.5"
                    android:gravity="bottom|center_horizontal" android:textSize="18sp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" android:id="@+id/boatStatus" android:layout_weight="0.5"
                    android:gravity="center_horizontal|top"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>