<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="64dp"
                                                   android:background="?attr/colorButtonNormal">

    <TextView
            android:text="@string/marketNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/notify_text"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:autoText="false" app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="12sp" app:autoSizeMaxTextSize="52sp" app:autoSizeStepGranularity="2sp"
