<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.lanyard.pirateerlite.MapActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/frag_container" app:layout_constraintBottom_toTopOf="@+id/navigation"
            android:gravity="center">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp" android:layout_weight="1" android:id="@+id/mapFrame">

            <fragment
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:name="com.lanyard.pirateerlite.fragments.MapFragment"
                    android:id="@+id/fragment" android:tag="map"/>
        </FrameLayout>
        <fragment
                android:layout_width="match_parent"
                android:layout_height="32dp" android:name="com.lanyard.pirateerlite.fragments.WalletFragment"
                android:id="@+id/wallet"/>
    </LinearLayout>
    <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/navigation">
    </android.support.design.widget.BottomNavigationView>

</android.support.constraint.ConstraintLayout>